<%- include("partials/header") %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">YelpCamp</a>
            </div>
            <div class="collapse navbar-collapse col-md-2" id="navbarSupportedContent"> 
                <ul class="nav navbar-nav">
                    <li><a class="nav-item nav-link" href="/">Login</a></li>
                    <li><a class="nav-item nav-link" href="/">Sign Up</a></li>
                    <li><a class="nav-item nav-link" href="/">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>




 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welecome To YelpCamp!</h1>
             <p>View our hand-picked campground from all over the world</p>
             <p>
                <a class ="btn btn-promary btn-lg" href="/campgrounds/new">Add New Campground</a>
             </p>
         </div>  
     </header>

    <div class= "row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="w-50 p-3 border">
                <div class="thumbnail">
                   <img src="<%= campground.image %>">
    
                   <div class="caption">
                      <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
 </div>

<%- include("partials/footer") %>